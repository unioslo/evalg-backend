#!/usr/bin/env groovy

node ('evalg') {
    def workspace = pwd()
    def project = 'usit-int'
    def image_version

    stage ('Checkout') {
        checkout scm
        image_version = sh(
            returnStdout: true,
            script: 'git describe --dirty=+ --tags'
        ).trim() - /^v/
    }
    stage ('Build ballotbox image') {
        sh "docker build \
            -t '${project}/valg-ballotbox' \
            -f Dockerfile-ballotbox ."
        sh "docker tag '${project}/valg-ballotbox' '${project}/valg-ballotbox:${image_version}'"
    }
    stage ('Build evalg image') {
        sh "docker build \
            -t '${project}/valg-evalg' \
            -f Dockerfile-evalg ."
        sh "docker tag '${project}/valg-evalg' '${project}/valg-evalg:${image_version}'"
    }
    stage ('Push images') {
        sh "docker push '${project}/valg-evalg:${image_version}'"
        sh "docker push '${project}/valg-ballotbox:${image_version}'"
    }
}
