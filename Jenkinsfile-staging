#!/usr/bin/env groovy

pipeline {
    agent { label 'docker' }
    environment {
        project = 'it-usit-int-drift'
        registry = 'harbor.uio.no'
        image_version = sh( 
            returnStdout: true,
            script: 'git describe --dirty=+ --tags'
        ).trim()
    }
    stages {
        stage ('Build evalg image') {
            steps {
                sh "docker build --no-cache \
                    -t '${project}/valg-backend' \
                    -f Dockerfile-staging ."
                sh "docker tag '${project}/valg-backend' '${project}/valg-backend:${image_version}'"
            }
        }
        stage ('Push image to Harbor') {
            steps {
                sh "docker push '${registry}/${project}/valg-backend'"
            }
        }
        stage ('Cleanup after docker') {
            steps {
                sh "docker system prune -f"
                sh "docker rmi \$(docker images --filter 'reference=it-usit-int-drift/valg-backend' --filter 'before=it-usit-int-drift/valg-backend:${image_version}' -q)"
            }
        }
    }
}

